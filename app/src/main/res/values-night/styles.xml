<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.SplashTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/app_logo</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="postSplashScreenTheme">@style/Theme.BloodDonation</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.AppCompat.DayNight.DialogWhenLarge">
        <item name="android:windowAnimationStyle">@style/Animation.Design.BottomSheetDialog</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
         <item name="android:windowBackground">@color/dark</item>
    </style>
</resources>