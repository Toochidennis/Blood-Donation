<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.SignUpMethodFragment">

    <ImageButton
        android:id="@+id/navigate_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/dimen_16"
        android:background="@drawable/drawable_navigate_back"
        android:contentDescription="@string/navigate_up"
        android:padding="@dimen/dimen_12"
        android:src="@drawable/arrow_back"
        app:tint="@color/red" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/navigate_back_button"
        android:fontFamily="@font/roboto_bold"
        android:paddingStart="@dimen/dimen_16"
        android:paddingEnd="@dimen/dimen_16"
        android:text="@string/sign_up"
        android:textColor="@color/textColor"
        android:textSize="@dimen/text_24"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView1"
        android:fontFamily="@font/roboto_regular"
        android:padding="@dimen/dimen_16"
        android:text="@string/how_would_you_like_to_create_an_account"
        android:textColor="@color/textColor"
        android:textSize="@dimen/text_16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_16">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/donor_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_16"
            android:layout_weight="1"
            android:background="@drawable/drawable_button_1"
            android:fontFamily="@font/roboto_regular"
            android:text="As Donor"
            android:textAllCaps="false"
            android:textColor="@color/red"
            android:textSize="@dimen/text_16" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/hospital_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/drawable_button_1"
            android:fontFamily="@font/roboto_regular"
            android:text="As Hospital"
            android:textAllCaps="false"
            android:textColor="@color/red"
            android:textSize="@dimen/text_16" />

    </LinearLayout>

</RelativeLayout>